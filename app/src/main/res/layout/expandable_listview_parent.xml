<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cardView_device_coin_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#D3C9C9"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp" >

        <TextView
            android:id="@+id/SubServiceName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/cairo_light"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/PlaceHolder"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/SubServicePic"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:src="@drawable/electricity" />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVServicePriceList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        tools:listitem="@layout/expandable_listview_child"/>
</LinearLayout>